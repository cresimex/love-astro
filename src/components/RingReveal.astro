<script>
	const ringBox = document.getElementById('ring-box');
	const boxClosed = document.getElementById('box-closed');
	const boxOpened = document.getElementById('box-opened');
	const ringMessage = document.getElementById('ring-message');
	const ringIntro = document.getElementById('ring-intro');
	const ringBoxContainer = document.getElementById('ring-box-container');

	// Animaci√≥n de entrada cuando la secci√≥n es visible
	const observer = new IntersectionObserver((entries) => {
		entries.forEach(entry => {
			if (entry.isIntersecting) {
				setTimeout(() => {
					ringIntro?.classList.remove('opacity-0', 'translate-y-10');
					ringIntro?.classList.add('animate-fade-in-up');
				}, 200);
				
				setTimeout(() => {
					ringBoxContainer?.classList.remove('opacity-0', 'translate-y-10');
					ringBoxContainer?.classList.add('animate-fade-in-up');
				}, 600);
			}
		});
	}, { threshold: 0.3 });

	const section = document.querySelector('#ring-box-container')?.closest('section');
	if (section) observer.observe(section);

	// Abrir la caja
	let isOpen = false;
	ringBox?.addEventListener('click', () => {
		if (!isOpen) {
			isOpen = true;
			
			// Ocultar caja cerrada
			boxClosed?.classList.add('opacity-0', 'scale-95');
			
			setTimeout(() => {
				boxClosed?.classList.add('hidden');
				boxOpened?.classList.remove('hidden');
				
				// Mostrar mensaje
				setTimeout(() => {
					ringMessage?.classList.remove('hidden');
					setTimeout(() => {
						ringMessage?.classList.remove('opacity-0');
						ringMessage?.classList.add('animate-fade-in-up');
					}, 100);
				}, 800);
			}, 500);
		}
	});
</script>

<style>
	.perspective-1000 { perspective: 1000px; }

	.animate-spin-slow { animation: spin 40s linear infinite; }
	@keyframes spin { from { transform: rotate(0deg); } to { transform: rotate(360deg); } }

	/* Diamond pulse: subtle */
	.animate-pulse { animation: ringPulse 2.8s ease-in-out infinite; }
	@keyframes ringPulse { 0% { transform: scale(1); opacity: 0.95 } 50% { transform: scale(1.04); opacity: 1 } 100% { transform: scale(1); opacity: 0.95 } }

	/* Subtle sparkles */
	.sparkle {
		position: absolute;
		width: 6px;
		height: 6px;
		background: rgba(255,255,255,0.9);
		border-radius: 50%;
		box-shadow: 0 0 8px rgba(255,255,255,0.25);
		opacity: 0.85;
		animation: sparkle-animation 2.6s ease-in-out infinite;
	}

	.sparkle.delay-1 { animation-delay: 0.6s; left: 22%; top: 28%; }
	.sparkle.delay-2 { animation-delay: 1.2s; right: 22%; bottom: 28%; }

	@keyframes sparkle-animation { 0%,100%{ opacity:0; transform: scale(0.6);} 50%{ opacity:0.9; transform: scale(1.1);} }

	.animate-fade-in-up { animation: fadeInUp 0.8s ease-out forwards; }
	@keyframes fadeInUp { to { opacity: 1; transform: translateY(0); } }
</style>